---
export interface Props {
  title: string;
  status: 'available' | 'coming-soon';
  installation: string;
  usage: string;
  description: string;
}

const { title, status, installation, usage, description } = Astro.props;
---

<div class="bg-white border border-neutral-200 rounded-xl p-6 h-full shadow-sm">
  <div class="flex items-center justify-between mb-4 pb-3 border-b border-neutral-200">
    <h3 class="m-0 text-lg font-semibold text-neutral-900">{title}</h3>
    <span class:list={[status === 'available' ? 'bg-emerald-100 text-emerald-800' : 'bg-amber-100 text-amber-800', 'px-2.5 py-1 rounded-full text-xs font-medium']}>
      {status === 'available' ? 'âœ… Available' : 'ðŸš§ Coming Soon'}
    </span>
  </div>
  
  <div>
    <p class="text-neutral-600 leading-6 mb-4">{description}</p>
    
    <div class="mb-4">
      <h4 class="text-xs font-semibold text-neutral-800 uppercase tracking-wide mb-2">Installation</h4>
      <pre class="bg-neutral-50 border border-neutral-200 rounded-md p-3 text-sm m-0 overflow-x-auto"><code class="font-mono text-neutral-700">{installation}</code></pre>
    </div>
    
    <div>
      <h4 class="text-xs font-semibold text-neutral-800 uppercase tracking-wide mb-2">Usage</h4>
      <pre class="bg-neutral-50 border border-neutral-200 rounded-md p-3 text-sm m-0 overflow-x-auto"><code class="font-mono text-neutral-700" set:html={usage}></code></pre>
    </div>
  </div>
</div>