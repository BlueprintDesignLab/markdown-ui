{
  "name": "markdown-ui-workspace",
  "private": true,
  "scripts": {
    "build:all": "pnpm -r run build",
    "dev:demo": "pnpm --filter markdown-ui-demo dev",
    "setup:dev": "pnpm install && pnpm run build:all",
    "setup:prod": "echo 'Setting up for production...'",
    "publish:all": "pnpm run build:all && pnpm -r publish --access public",
    "version:patch": "pnpm -r exec -- npm version patch",
    "version:minor": "pnpm -r exec -- npm version minor"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "chart.js": "^4.5.0"
  }
}