{
  "name": "@markdown-ui/react",
  "version": "0.2.0",
  "description": "React renderer for markdown-ui",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./widgets.css": "./src/lib/widgets.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && vite build",
    "dev": "vite build --watch",
    "demo": "node demo/server.js",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "markdown",
    "widgets",
    "ui"
  ],
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chart.js": "^4.5.0"
  }
}
