{
	"version": "0.3.1",
	"description": "svelte renderer for markdown-ui",
	"name": "@markdown-ui/svelte",
	"type": "module",
	"main": "./src/lib/index.ts",
	"exports": {
		".": "./src/lib/index.ts",
		"./widgets.css": "./src/lib/widgets.css"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.36.2",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"svelte": "^5.38.3",
		"svelte-check": "^4.3.1"
	},
	"dependencies": {},
	"publishConfig": {
		"access": "public"
	}
}
