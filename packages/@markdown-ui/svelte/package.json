{
	"version": "0.1.2",
	"description": "svelte renderer for markdown-ui",
	"name": "@markdown-ui/svelte",
	"type": "module",
	"main": "./src/lib/index.ts",
	"exports": {
		".": "./src/lib/index.ts",
		"./widgets.css": "./src/lib/widgets.css"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@codemirror/lang-markdown": "^6.3.4",
		"@codemirror/view": "^6.38.1",
		"@markdown-ui/marked-ext": "^1.1.2",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.31.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.2",
		"marked": "^16.1.2",
		"svelte": "^5.38.1",
		"svelte-check": "^4.3.1",
		"svelte-codemirror-editor": "^1.4.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.2"
	},
	"dependencies": {},
	"publishConfig": {
		"access": "public"
	}
}
