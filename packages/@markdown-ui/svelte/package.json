{
	"version": "0.0.11",
	"description": "svelte renderer for markdown-ui",
	"name": "@markdown-ui/svelte",
	"type": "module",
	"main": "./src/lib/index.ts",
	"exports": {
		".": "./src/lib/index.ts",
		"./widgets.css": "./src/lib/widgets.css"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"dompurify": "^3.2.6"
	}
}
